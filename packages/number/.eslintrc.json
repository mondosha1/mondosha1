{
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["mondosha1/global-next"],
      "parserOptions": {
        "project": ["packages/number/tsconfig.json", "packages/number/tsconfig.*?.json"]
      },
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              ".",
              "..",
              "../..",
              "../../..",
              "../../../..",
              "./",
              "../",
              "../../",
              "../../../",
              "../../../../",
              "./index",
              "../index",
              "../../index",
              "../../../index",
              "../../../../index",
              "lodash",
              "@progress/kendo-angular-dialog",
              "@mondosha1/shared/util-number",
              {
                "name": "rxjs/operators",
                "importNames": ["tap"],
                "message": "Prefer use tap from @mondosha1/shared/util"
              },
              {
                "name": "lodash/fp",
                "importNames": ["differenceBy", "get", "tap"]
              },
              {
                "name": "@ngrx/store",
                "importNames": ["props"]
              }
            ]
          }
        ]
      }
    }
  ]
}
