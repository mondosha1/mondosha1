{
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["mondosha1/global-next"],
      "parserOptions": {
        "project": ["packages/either/tsconfig.json", "packages/either/tsconfig.*?.json"]
      },
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              ".",
              "..",
              "../..",
              "../../..",
              "../../../..",
              "./",
              "../",
              "../../",
              "../../../",
              "../../../../",
              "./index",
              "../index",
              "../../index",
              "../../../index",
              "../../../../index",
              "lodash",
              "@progress/kendo-angular-dialog",
              "@mondosha1/shared/util-either",
              {
                "name": "lodash/fp",
                "importNames": ["differenceBy", "get"]
              },
              {
                "name": "@ngrx/store",
                "importNames": ["props"]
              }
            ]
          }
        ]
      }
    }
  ]
}
