{
  "root": "packages/core",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "configurations": {
        "production": {
          "tsConfig": "packages/core/tsconfig.lib.prod.json"
        }
      },
      "options": {
        "assets": ["packages/core/*.md"],
        "main": "packages/core/src/index.ts",
        "outputPath": "dist/packages/core",
        "packageJson": "packages/core/package.json",
        "tsConfig": "packages/core/tsconfig.lib.json"
      }
    },
    "bump": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\", ]//g' | xargs -I '{}' sed -i '' 's/\"version\":[ ]*\"[^\"]*\"/\"version\": \"{}\"/g' packages/core/package.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts", "packages/core/**/*.html"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [
        {
          "target": "bump",
          "projects": "self"
        }
      ],
      "options": {
        "command": "npm pack | npm publish",
        "cwd": "dist/packages/core"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/core"],
      "options": {
        "jestConfig": "packages/core/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:util", "platform:desktop", "platform:server", "open-source:mondosha1"]
}
