{
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["elium/global-next"],
      "parserOptions": {
        "project": ["packages/decorators/tsconfig.json", "packages/decorators/tsconfig.*?.json"]
      },
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              "lodash",
              "@progress/kendo-angular-dialog",
              "@mondosha1/decorators",
              {
                "name": "rxjs/operators",
                "importNames": ["tap"],
                "message": "Prefer use tap from @elium/shared/util"
              },
              {
                "name": "lodash/fp",
                "importNames": ["differenceBy", "get", "tap"]
              },
              {
                "name": "@ngrx/store",
                "importNames": ["props"]
              }
            ]
          }
        ]
      }
    }
  ]
}
