{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "src/test-setup.ts", "**/*.spec.ts"]
}
