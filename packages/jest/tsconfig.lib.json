{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/jest",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "types": [],
    "lib": ["es2017", "dom"]
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "src/test-setup.ts", "**/*.spec.ts"]
}
